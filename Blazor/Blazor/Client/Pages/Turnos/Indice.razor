@page "/indice-turnos"
@inject HttpClient Http

<h3>Turnos</h3>

<div>
    <a class="btn btn-success" href="nuevo-turno"> Nuevo Turno </a>
</div>

@if (turnos == null)
{
    <text>Cargando...</text>
}
else if (turnos.Length == 0)
{
    <text>No hay turnos en la base de datos</text>
}
else
{


    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turno in turnos)
            {
                <tr>
                    <td>
                        <a class="btn btn-success">Editar</a>
                        <button class="btn badge-danger">Borrar</button>
                    </td>
                    <td>@turno.Id</td>
                    <td>@turno.Nombre</td>
                </tr>
            }
        </tbody>
    </table>
}

@code{
    Turno[] turnos { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await CargarTurnos();
    }

    async Task CargarTurnos()
    {
        turnos = await Http.GetJsonAsync<Turno[]>("turnos");
        turnos = new Turno[]
        {
            new Turno(){Id = 1, Nombre = "Daiana"},
            new Turno(){Id = 2, Nombre = "Ragnar"},
        };
    }
}

